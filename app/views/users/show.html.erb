<div class="card text-center">
  <!-- Card header -->
  <div class="card-header">
    <h3 class="mb-0">プロフィール</h3>
  </div>
  <!-- Card body -->
  <div class="card-body">
      <%= image_tag @user.decorate.avatar, class: 'avatar-xl rounded-circle' %>
      <h4 class="mt-5"><%= @user.name %></h4>
      <button type="button" class="btn btn-outline-primary">
        <% if current_user.following?(@user) %>
          <%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
        <% end %>
      </button>
    <hr class="my-5">
    <div>
      <h5 class="card-title">Hobby</h5>
      <p class="card-text"><%= @user.hobby %></p>
      <h5 class="card-title">Profile</h5>
      <p class="card-text"><%= @user.profile %></p>
    </div>
  </div>
</div>
