<div class="card text-center">
  <!-- Card header -->
  <div class="card-header">
    <h3 class="mb-0">プロフィール</h3>
  </div>
  <!-- Card body -->
  <div class="card-body">
      <%= image_tag @user.decorate.avatar, class: 'avatar-xl rounded-circle' %>
      <h4 class="mt-5"><%= @user.name %></h4>
    <hr class="my-5">
    <div>
      <h5 class="card-title">Hobby</h5>
      <p class="card-text"><%= @user.hobby %></p>
      <h5 class="card-title">Profile</h5>
      <p class="card-text"><%= @user.profile %></p>
    </div>
  </div>
</div>
